<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/layout_botoes_pergunta_quiz">

    <ImageButton
        android:id="@+id/imageButtonIdProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        android:src="@drawable/botao_proximo"
        android:background="#FFFF"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/imageButtonIdCancelar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp"
        android:gravity="center_vertical"
        />

    <ImageButton
        android:id="@+id/imageButtonIdCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contextClickable="true"
        android:src="@drawable/botao_cancelar"
        android:background="#FFFF"
        android:paddingTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="37dp"
        android:layout_marginStart="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--android:layout_gravity="center|right|center_horizontal"-->
</RelativeLayout>