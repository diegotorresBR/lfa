<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center"
    android:paddingTop="0dip"
    android:stretchColumns="1"
    android:background="#ffffff"
    tools:backgroundTint="@drawable/abc_btn_borderless_material">

    <TableRow android:background="@drawable/abc_btn_borderless_material"
        tools:background="@drawable/abc_btn_borderless_material"
        app:backgroundTint="@drawable/abc_btn_borderless_material"
        tools:backgroundTintMode="screen"
        app:backgroundTintMode="screen">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:paddingTop="0dip"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="13dip"/>
            </TableRow>


            <TableRow android:background="@drawable/abc_btn_borderless_material">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="9dip"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </TableRow>

        </TableLayout>

        <TableLayout>
            <ImageView
                android:id="@+id/expandableIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:contentDescription="LFA-Educ@"
                android:visibility="visible"
                />
        </TableLayout>
    </TableRow>
</TableLayout>


