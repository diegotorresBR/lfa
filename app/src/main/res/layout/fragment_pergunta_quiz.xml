<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:text="@string/pergunta_do_quiz"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:checkedButton="@+id/letraA">

            <RadioButton
                android:id="@+id/letraA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/letraA"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/letraB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/letraB"
                android:layout_marginBottom="10dp"/>


            <RadioButton
                android:id="@+id/letraC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/letraC"
                android:layout_marginBottom="10dp"/>


            <RadioButton
                android:id="@+id/letraD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/letraD"
                android:layout_marginBottom="10dp"/>


        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonProximo"
            android:layout_margin="15dp"
            android:paddingTop="15dp"
            android:layout_gravity="bottom"
            android:text="@string/proximo"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancelar"
            android:paddingTop="15dp"
            android:layout_margin="15dp"
            android:layout_gravity="bottom"
            android:text="@string/cancelar"
            />



    </LinearLayout>
</ScrollView>